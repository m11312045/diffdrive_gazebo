<launch>
  <env name="WAREHOUSE_DIR" value="$(env HOME)/ros_gazebo/src/aws-robomaker-small-warehouse-world"/>
  <env name="GAZEBO_MODEL_PATH"   value="$(find dynamic_logistics_warehouse)/models:$(optenv GAZEBO_MODEL_PATH)"/>
  <env name="GAZEBO_RESOURCE_PATH" value="$(find dynamic_logistics_warehouse):$(optenv GAZEBO_RESOURCE_PATH)"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find dynamic_logistics_warehouse)/worlds/warehouse.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
  </include>

  <!-- <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find aws_robomaker_small_warehouse_world)/worlds/small_warehouse.world"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="true"/>
  </include> -->
  
  <!-- 載入 XACRO 模型 -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find diffdrive_gazebo)/urdf/car-robot-xacro.urdf'"/>

  <!-- 啟動 robot_state_publisher -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rsp">
    <param name="use_sim_time" value="true"/>
  </node>

  <!-- Spawn the model -->
  <node name="urdf_spawer" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model robot_model -param robot_description -z 1.0" />
</launch>
