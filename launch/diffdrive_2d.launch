<launch>
  <!-- 啟用 Gazebo -->
  <!-- <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused"     value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="world_name" value="$(find aws_robomaker_small_house_world)/worlds/small_house.world"/>
  </include> -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

  <!-- 載入 XACRO 模型 -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find diffdrive_gazebo)/urdf/robot_diffdrive.xacro'"/>

  <!-- 啟動 robot_state_publisher -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rsp">
    <param name="use_sim_time" value="true"/>
  </node>

  <!-- Spawn the model -->
  <node name="urdf_spawer" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model robot_model -param robot_description -z 1.0" />
</launch>
